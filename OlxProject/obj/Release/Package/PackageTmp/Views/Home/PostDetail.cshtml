@model OlxProject.ViewModel.PostDetailViewModel

@{
    ViewBag.Title = "PostDetail";

    var i = 0;
}

<div class="single-page main-grid-border">
    <div class="container">

        <div class="product-desc">
            <div class="col-md-7 product-view">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6">
                            <div id="carousel" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner" style="height:400px;">

                                    
                                        <div class="item active">
                                            <img src="~/Data/User/@Model.Image[0].ImagePath" height="100%;">
                                        </div>
                                   
                                  

                                    <div class="item" >
                                        <img src="~/Data/User/@Model.Image[1].ImagePath" height="100%;">
                                    </div>

                                    <div class="item">
                                        <img src="~/Data/User/@Model.Image[2].ImagePath" height="100%;">
                                    </div>

                                  
                                </div>
                                <hr />
                                <div class="clearfix">
                                    <div class="carousel-link">

                              @foreach (var item in Model.Image)
                              {

                               <div data-target="#carousel" data-slide-to="@i" class="thumb" style="margin-right:20px;box-shadow:0px 2px 4px 0px; height:100px;"><img src="~/Data/User/@item.ImagePath" height="100%"></div>

                                  i++;
                              }
                                    </div>
                                </div>

                                <hr />
                            </div>
                        </div> <!-- /col-sm-6 -->

                    </div> <!-- /row -->
                </div>


                <div class="product-details">
               
                        <div class="row" style="width:100%; box-shadow:0px 2px 4px 0px;">
                           @foreach (var item in Model.AddAttribute)
                           {
                            <div class="col-sm-6" style="margin-top:20px;">
                                <label>@item.Attribute :</label>
                                <label>@item.value </label>
                            </div>
                           }
                            

                        </div>


                <hr />
                    <h4>Title : <a href="#">@Model.Ad.Title</a></h4>
                    <p><strong>Descriptio:</strong> @Model.Ad.Description</p>
                    <p><strong>Location:</strong> @Model.Ad.State , @Model.Ad.City</p>

                </div>
            </div>
            <div class="col-md-5 product-details-grid">
                <div class="item-price">
                    <div class="condition">
                        <p class="p-price">Price</p>
                        <h4>@Model.Ad.Price</h4>
                        <div class="clearfix"></div>
                    </div>
                    <div class="condition">
                        <p class="p-price">Condition</p>
                        <h4>@Model.Ad.Condition</h4>
                        <div class="clearfix"></div>
                    </div>
                    <div class="itemtype">
                        <p class="p-price">Item Type</p>
                        <h4>@Model.Ad.Category</h4>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="interested text-center">
                    <h4>Interested in this Ad?<small> Contact the Seller!</small></h4>
                    <p><i class="glyphicon glyphicon-earphone"></i>@Model.User.Contact</p>
                </div>
                <div class="tips">
                    <h4>Admin Reviews</h4>
                    <ol>
                        @foreach (var item in Model.Reviews)
                        {
                            <li>@item.Review1 </li>
                        }
                       

                       
                    </ol>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>


